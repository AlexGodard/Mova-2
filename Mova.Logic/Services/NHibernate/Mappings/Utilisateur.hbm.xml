<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping assembly="Mova.Logic"
                   namespace="Mova.Logic.Models.Entities"
                   xmlns="urn:nhibernate-mapping-2.2">
  <class name="Utilisateur" table="Utilisateurs">
    <id name="IdUtilisateur">
      <column name="IdUtilisateur" not-null="true" sql-type="INTEGER" />
      <generator class="identity" />
    </id>
    <property name="Prenom">
      <column name="Prenom" not-null="true" sql-type="VARCHAR" />
    </property>
    <property name="Nom">
      <column name="Nom" not-null="true" sql-type="VARCHAR" />
    </property>
    <property name="NomUtilisateur">
      <column name="NomUtilisateur" not-null="true" sql-type="VARCHAR" />
    </property>
    <property name="MotDePasse"> <!-- Code -->
      <column name="MotPasse" not-null="true" sql-type="VARCHAR" />      <!-- BD -->
    </property>
    <property name="Courriel">
      <column name="Courriel" not-null="true" sql-type="VARCHAR" />
    </property>
    <property name="Sexe">
      <column name="Sexe" not-null="true" sql-type="VARCHAR" />
    </property>
  </class>
</hibernate-mapping>
